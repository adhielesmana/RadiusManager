# Docker Environment Variables Template
# Copy this file to .env and customize for your deployment

# Database Configuration
DB_PASSWORD=isppass123

# Session Secret (CHANGE IN PRODUCTION!)
SESSION_SECRET=your-secure-random-session-secret-change-this-in-production

# RADIUS Configuration
# Default: Uses local FreeRADIUS container (freeradius)
# For external FreeRADIUS: Change RADIUS_HOST to IP/hostname (e.g., 192.168.1.100)
RADIUS_HOST=freeradius
RADIUS_SECRET=testing123
RADIUS_AUTH_PORT=1812
RADIUS_ACCT_PORT=1813

# Application Environment
NODE_ENV=production

# SSL/Domain Configuration (Production Only)
# Set ENABLE_SSL=true to enable HTTPS with Let's Encrypt
ENABLE_SSL=false
APP_DOMAIN=localhost
LETSENCRYPT_EMAIL=admin@example.com
# Set to 'true' for testing SSL setup without hitting Let's Encrypt rate limits
LE_STAGING=false

# Port Configuration (Customize to avoid conflicts with existing services)
# PostgreSQL - Default 5433 to avoid conflict with existing PostgreSQL on 5432
POSTGRES_HOST_PORT=5433

# ISP Manager Application - Default 5000
APP_HOST_PORT=5000

# FreeRADIUS Ports
RADIUS_AUTH_PORT=1812
RADIUS_ACCT_PORT=1813
RADIUS_STATUS_PORT=18120

# Nginx Ports (only used when ENABLE_SSL=true)
HTTP_PORT=80
HTTPS_PORT=443

# PostgreSQL Connection (Docker Compose automatically sets these)
# DATABASE_URL=postgresql://ispuser:isppass123@postgres:5432/ispmanager
# PGHOST=postgres
# PGPORT=5432
# PGUSER=ispuser
# PGPASSWORD=isppass123
# PGDATABASE=ispmanager
